{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "jsx": "preserve",
        "lib": [
            "DOM",
            "ES2015",
            "ES2017"
        ],
        "plugins": [{"name": "typescript-plugin-css-modules"}],
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true,
        "removeComments": false
    },
    "include": [
        "./src/**/*", "global.d.ts"
    ]
}
